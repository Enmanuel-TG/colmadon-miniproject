generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  password        String
  birthday        DateTime
  phoneNumber     String
  photo           String
  role            Role      @default(user)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  products        Product[]
  ratingsGiven    Rating[]  @relation("ReviewerRelation")
  ratingsReceived Rating[]  @relation("SellerRelation")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       String
  description String
  location    String
  state       String
  category    String
  stock       Int
  photos      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

enum Role {
  user
  admin
}

model Rating {
  id         Int      @id @default(autoincrement())
  rate       Int      @default(0)
  reviewerId Int
  reviewer   User     @relation("ReviewerRelation", fields: [reviewerId], references: [id])
  sellerId   Int
  seller     User     @relation("SellerRelation", fields: [sellerId], references: [id])
  createdAt  DateTime @default(now())
}